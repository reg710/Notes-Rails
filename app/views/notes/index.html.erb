<div class="form">
    <form action="/" method="post">
        <input type="hidden" name="authenticity_token"/>
            <input type="text" name="my_input" placeholder="Take a note..."/>
            <input type="submit" value="Post"/>
    </form>
</div>

<div class="container">
    <div class="board">
        <% @all_notes.each do |note|%>
            <div class="note">
                <%= note.content %>
            </div>
        <% end %>
    </div>
</div>

